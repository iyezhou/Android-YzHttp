<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:id="@+id/title"
        android:background="#537DC9"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YzHttp测试"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textColor="#ffffff"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:onClick="get"
                android:text="GET请求"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="postForm"
                android:text="POST请求(FormBody)"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="postFormMultipart"
                android:text="POST请求(MultipartBody)"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="postMultiFiles"
                android:text="多文件上传"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="postJson"
                android:text="POST JSON"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="postFile"
                android:text="POST FILE"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="postBytes"
                android:text="POST BYTES"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="downloadFile"
                android:text="下载文件(回调)"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="downloadFileWithInterceptor"
                android:text="下载文件(拦截器)"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="uploadFileWithInterceptor"
                android:text="上传文件(拦截器)"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:onClick="loginZhihu"
                android:text="登录知乎"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="loginZhihuWithSimpleCookie"
                android:text="登录知乎\n(内存Cookie)"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="loginZhihuWithPersistentCookie"
                android:text="登录知乎\n(序列化Cookie)"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="getZhihuTimeline"
                android:text="获取知乎时间线"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="getCookies"
                android:text="获取Cookies"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="clearCookies"
                android:text="清空Cookies"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="https"
                android:text="HTTPS"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="httpsCert"
                android:text="HTTPS\n(自签名证书)"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="httpsCustom"
                android:text="HTTPS\n(自部署证书)"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="httpsBilateral"
                android:text="HTTPS\n(双向证书验证)"
                android:textSize="14sp"
                android:textAllCaps="false"
                />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@android:style/Widget.Material.ProgressBar.Horizontal"
        android:max="100"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitCenter"
        />

</LinearLayout>